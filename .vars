SHELL := /bin/bash +x
MOD_DIR = modules
MOD_EXT = bm
MODULES = $(shell find $(MOD_DIR)/ -regex "[^$(HEAD_PREFIX)]*.$(MOD_EXT)")
DIST_DIR = dist
MAIN_SCRIPT = main.sh
END_SCRIPT = script.sh
HEAD_PREFIX = _
HEAD_FILES = $(wildcard $(MOD_DIR)/_*.$(MOD_EXT))
STATE_OK = '[ \e[32mOK\e[0m ]'
STATE_FAIL = '[ \e[31mFAIL\e[0m ]'
ERR_FILE = errors
END_OF_TARGET = 
